
<h3><%= @article.title %></h3>
<%= markdown @article.text %>


<%= link_to like_article_path(@article), method: :put do %>
  <button type="button" class="btn btn-success" aria-label="Left Align">
    <span class="glyphicon.glyphicon-thumbs-up" aria-hidden="true"></span>
    <span class="badge"><%= @article.get_upvotes.size %></span>
  </button>
<% end %>
<%= link_to dislike_article_path(@article), method: :put do %>
  <button type="button" class="btn btn-danger" aria-label="Left Align">
    <span class="glyphicon.glyphicon-thumbs-down" aria-hidden="true"></span>
    <span class="badge"><%= @article.get_downvotes.size %></span>
  </button>
<% end %>
  Added by:
  <%= @article.user.email %>

  <p><%if @article.user==current_user %>
    <%= link_to 'Edit', edit_article_path(@article) , class: "btn btn-default" %>
  <% end %>
  <p>
<h3>Comments</h3>
<%= render @article.comments %>
<%if user_signed_in? %>
<h4>Add a comment:</h4>

<%= render 'comments/form' %>
<% end %>
<%= link_to 'Back', articles_path, class: "btn btn-default" %>
